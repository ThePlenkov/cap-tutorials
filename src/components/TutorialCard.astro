---
interface Props {
  tutorial: {
    slug: string;
    data: {
      title: string;
      description: string;
    };
  };
}

const { tutorial } = Astro.props;
---

<a 
  href={`/tutorials/${tutorial.slug}`}
  class="block p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-lg transition-all"
  data-tutorial-card
  data-title={tutorial.data.title}
  data-description={tutorial.data.description}
>
  <h2 class="text-2xl font-semibold mb-2">{tutorial.data.title}</h2>
  <p class="text-gray-600 dark:text-gray-300">{tutorial.data.description}</p>
</a>